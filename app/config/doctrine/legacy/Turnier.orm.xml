<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity name="AppBundle\Entity\Turnier" table="turnier">
    <id name="id" type="integer" column="id">
      <generator strategy="IDENTITY"/>
    </id>
    <field name="title" type="string" column="title" length="255" nullable="true">
      <options>
        <option name="fixed"/>
      </options>
    </field>
    <field name="order" type="integer" column="order" nullable="true">
      <options>
        <option name="unsigned"/>
      </options>
    </field>
    <field name="completed" type="integer" column="completed" nullable="true">
      <options>
        <option name="unsigned"/>
      </options>
    </field>
    <one-to-many target-entity="AppBundle\Entity\Spieler" mapped-by="championship" field="players" />
  </entity>
</doctrine-mapping>
