<!DOCTYPE html>
<html lang="de">
    <head>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <title>{% block title %}haus23.net{% endblock %}</title>
        <!-- bower:css -->
        <link rel="stylesheet" href="/assets/bower_components/bootstrap/dist/css/bootstrap.min.css" />
        <link rel="stylesheet" href="/assets/bower_components/toastr/toastr.min.css" />
        <link rel="stylesheet" href="/assets/bower_components/select2/dist/css/select2.min.css" />
        <link rel="stylesheet" href="/assets/bower_components/select2-bootstrap-theme/dist/select2-bootstrap.min.css" />
        <!-- endbower -->
        <link rel="stylesheet" href="{{ asset('assets/build/css/backend.css?v1') }}" />
        {% block stylesheets %}{% endblock %}
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
    </head>
    <body>
    <div id="wrapper" class="container-fluid">
        <div class="row">
            <div class="col-sm-3 col-md-2 dtp-sidebar hidden-xs">
                <nav class="navbar navbar-inverse navbar-static-top">
                    <div class="navbar-header">
                        <button type="button" class="navbar-toggle" data-target="#main-nav" aria-expanded="true">
                            <span class="sr-only">Toggle navigation</span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                        </button>
                        <a class="navbar-brand" href="{{ path('dtp.dashboard') }}">DTP</a></li>
                    </div>
                </nav>
                <nav class="dtp-nav">
                    <ul class="nav nav-stacked">
                        <li>
                            <p class="nav-text">Turnier</p>
                            <ul class="nav nav-stacked">
                                <li><a href="{{ path('dtp.tournament.create') }}">Neu</a></li>
                    {% if dtp.tournament %}
                                <li><a href="{{ path('dtp.tournament.create') }}">Bearbeiten</a></li>
                            </ul>
                        </li>
                        <li>
                            <p class="nav-text">Runde</p>
                            <ul class="nav nav-stacked">
                                <li><a href="{{ path('dtp.round.create') }}" data-dtp-dialog>Neu</a></li>
                        {% if dtp.round %}
                                <li><a href="{{ path('dtp.round.edit', { id: dtp.round.id }) }}">Bearbeiten</a></li>
                            </ul>
                        </li>
                        <li>
                            <p class="nav-text">Tipps</p>
                            <ul class="nav nav-stacked">
                                <li><a href="{{ path('dtp.tournament.create') }}">Erfassen</a></li>
                                <li><a href="{{ path('dtp.tournament.create') }}">Bearbeiten</a></li>
                        {% endif %}
                    {% endif %}
                            </ul>
                        </li>
                    </ul>

                </nav>

            </div>
            <div class="col-sm-9 col-md-10 dtp-content">
                <nav class="navbar navbar-default navbar-static-top">
                    <div class="container-fluid">
                    <div class="navbar-header">
                        <button type="button" class="navbar-toggle" data-target="#main-nav" aria-expanded="true">
                            <span class="sr-only">Toggle navigation</span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                        </button>
                        <a class="navbar-brand" href="{{ path('dtp.dashboard') }}">DTP</a></li>
                    </div>
                    <ul class="nav navbar-nav">
                        <a class="navbar-brand" href="{{ path('dtp.dashboard') }}">{{ dtp.tournament.name ?? 'DTP' }}</a></li>
                    </ul>
                    <ul class="nav navbar-nav navbar-right">
                        <li><a href="{{ path('ranking') }}">Frontend</a></li>
                    </ul>
                    </div>
                </nav>
                <div id="container" class="container-fluid">
                    {% block body %}{% endblock %}
                </div>
            </div>
        </div>

    </div>

    <!-- bower:js -->
    <script src="/assets/bower_components/jquery/dist/jquery.min.js"></script>
    <script src="/assets/bower_components/bootstrap/dist/js/bootstrap.min.js"></script>
    <script src="/assets/bower_components/toastr/toastr.min.js"></script>
    <script src="/assets/bower_components/select2/dist/js/select2.min.js"></script>
    <script src="/assets/bower_components/select2/dist/js/i18n/de.js"></script>
    <!-- endbower -->
    <!-- inject:js -->
    <!-- endinject -->
    <script>
        var flashMessages = {{ app.session.flashBag.all|json_encode()|raw }};
    </script>
    <script src="/assets/dtp-legacy-backend.js"></script>
    {% block javascripts %}{% endblock %}
    </body>
</html>
