{% extends app.request.xmlHttpRequest
    ? 'dtp/backend/_shared/dialog.modal.html.twig'
    : 'dtp/backend/_shared/dialog.html.twig' %}

{% set dialogtitle = 'Neuer Mitspieler' %}
{% block dialogbody %}
    {{ form_start(form) }}
        {{ form_row(form.name) }}
        {{ form_row(form.slug) }}
        {{ form_row(form.email) }}
        <div class="form-group">
            {{ form_widget(form.save) }}
            {% if not app.request.xmlHttpRequest %}
                {{ form_widget(form.saveAndAdd) }}
            {% endif %}
        </div>
    {{ form_end(form) }}
{% endblock %}
