{% extends 'dtp/standings/_layout.html.twig' %}

{% block content %}
    <div id="content">
        <h2>Spiel√ºbersicht</h2>
        {% for r in rounds %}
            <h3>Runde {{ r.nr }}</h3>
            <table>
                <thead>
                <tr>
                    <th>Datum</th>
                    <th>Liga</th>
                    <th>Paarung</th>
                    <th>Ergebnis</th>
                    <th>Punkte</th>
                </tr>
                </thead>
                <tbody>
                {% for m in r.matches %}
                    <tr>
                        <td>{{ m.datum | date("d.m.Y")}}</td>
                        <td>{{ m.liga }}</td>
                        <td>{{ m.paarung }}</td>
                        <td>{{ m.ergebnis }}</td>
                        <td>{{ m.punkte }}</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        {% endfor %}
    </div>
{% endblock %}
