{% extends 'dtp/standings/_layout.html.twig' %}

{% block content %}
    <h3>Spiel√ºbersicht</h3>
    <ul class="nav nav-tabs" role="tablist">
        {% for r in rounds %}
            <li role="presentation" class="{{ (loop.first and championship.completed) or (loop.last and not championship.completed) ? 'active' }}">
                <a href="#runde{{ r.nr }}" aria-controls="runde{{ r.nr }}" role="tab" data-toggle="tab">
                    Runde {{ r.nr }}
                </a>
            </li>
        {% endfor %}
    </ul>
    <div class="tab-content">
        {% for r in rounds %}
        <div role="tabpanel" class="tab-pane{{ (loop.first and championship.completed) or (loop.last and not championship.completed) ? ' active' }}" id="runde{{ r.nr }}">
            <table class="table">
                <thead>
                <tr>
                    <th>Datum</th>
                    <th>Liga</th>
                    <th>Paarung</th>
                    <th>Ergebnis</th>
                    <th>Punkte</th>
                </tr>
                </thead>
                <tbody>
                {% for m in r.matches %}
                    <tr>
                        <td>{{ m.datum | date("d.m.Y")}}</td>
                        <td>{{ m.liga }}</td>
                        <td>{{ m.paarung }}</td>
                        <td>{{ m.ergebnis }}</td>
                        <td>{{ m.punkte }}</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
        {% endfor %}
    </div>
{% endblock %}
