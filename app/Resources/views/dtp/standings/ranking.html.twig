{% extends 'dtp/standings/_layout.html.twig' %}

{% block content %}
        <h3>{{ championship.completed ? 'Abschlusstabelle' : 'Aktuelle Tabelle' }}</h3>
        <table class="table table-striped">
            <thead>
            <tr>
                <th>Platz</th>
                <th>Name</th>
                <th>Punkte</th>
            </tr>
            </thead>
            <tbody>
            {% for p in players %}
                <tr>
                    <td>{{ p.platz }}</td>
                    <td>{{ p.user.name }}</td>
                    <td>{{ p.gesamt }}</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
{% endblock %}
