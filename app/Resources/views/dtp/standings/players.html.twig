{% extends 'dtp/standings/_layout.html.twig' %}

{% block content %}
    <h3>Resultate f√ºr
        <a href="#" data-toggle="modal" data-target="#playerSelect">{{ player.user.name }}</a>
    </h3>
    <div class="modal fade" id="playerSelect" tabindex="-1" role="dialog" aria-labelledby="playerSelectLabel">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title" id="playerSelectLabel">Spielerwahl</h4>
                </div>
                <div class="modal-body">
                    <div class="list-group">
                        {% for p in players %}
                        <a href="{{ path('players', {'championshipSlug': championship.slug,'userSlug': p.user.slug}) }}"
                           class="list-group-item{{ player.user.slug == p.user.slug ? ' active' }}">
                            {{ p.user.name }}
                        </a>
                        {% endfor %}
                    </div>
                </div>
            </div>
        </div>
    </div>
    <ul class="nav nav-tabs" role="tablist">
    {% for r in rounds %}
        <li role="presentation" class="{{ (loop.first and championship.completed) or (loop.last and not championship.completed) ? 'active' }}">
            <a href="#runde{{ r.nr }}" aria-controls="runde{{ r.nr }}" role="tab" data-toggle="tab">
                Runde {{ r.nr }}
            </a>
        </li>
    {% endfor %}
    </ul>
    <div class="tab-content">
    {% for r in rounds %}
        <div role="tabpanel" class="tab-pane{{ (loop.first and championship.completed) or (loop.last and not championship.completed) ? ' active' }}" id="runde{{ r.nr }}">
            <table class="table">
                <thead>
                <tr>
                    <th>Datum</th>
                    <th>Spiel</th>
                    <th>Tipp</th>
                    <th>Ergebnis</th>
                    <th>Punkte</th>
                </tr>
                </thead>
                <tbody>
                {% for m in r.matches %}
                    <tr>
                        <td>{{ m.datum | date("d.m.Y")}}</td>
                        <td>{{ m.paarung }}</td>
                        <td>{{ tips[m.id] ? tips[m.id].tipp }}</td>
                        <td>{{ m.ergebnis }}</td>
                        <td>{{ tips[m.id] ? tips[m.id].punkte }}</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    {% endfor %}
    </div>
{% endblock %}
